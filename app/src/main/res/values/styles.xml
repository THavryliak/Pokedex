<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="card_view">
        <item name="fontFamily">@font/boogaloo</item>
        <item name="android:textSize">@dimen/card_text_size</item>
        <item name="android:textColor">@color/card_text_color</item>
    </style>
    
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/card_text_color</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="fontFamily">@font/boogaloo</item>
    </style>

    <style name="detail_text_style">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="fontFamily">@font/boogaloo</item>
        <item name="android:layout_marginLeft">@dimen/side_margin</item>
        <item name="android:layout_marginRight">@dimen/side_margin</item>
        <item name="android:textColor">@color/text_stats_color</item>
    </style>

    <style name="crd">
        <item name="cardCornerRadius">18dp</item>
    </style>

</resources>